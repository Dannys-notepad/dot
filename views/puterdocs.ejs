                const code = block.querySelector('code').textContent;
                try {
                    await navigator.clipboard.writeText(code);
                    const originalText = block.querySelector('pre').textContent;
                    block.querySelector('pre').textContent = '‚úì Copied to clipboard!';
                    setTimeout(() => {
                        block.querySelector('pre').textContent = originalText;
